#include <stdio.h>

int main (){
  char str[1000],a;
  int i, c,l;
  
  printf("Enter string: ");
  scanf("%[^\n]",str);
  
  for(l=0;str[l]!='\0';l++);
  
	for(i=0;i<l-1;i++){
	    
	for(c=i+1;c<l;c++){
		    
		if(str[i]>str[c]){ //just change the greater sign to lower sign if you want descending order
			a=str[c];
			str[c]=str[i];
			str[i]=a;
		}
	}
}
	printf("Ascending order of the string: %s", str); //change this too so your teacher won't notice
	
	return 0;
}
